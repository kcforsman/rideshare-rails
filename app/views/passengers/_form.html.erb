<h2 class="my-class"><%=page_title%></h2>

<% if @passenger.errors.any? %>
<p> We're sorry something about you inputs isn't right. Please correct the mentioned fields.</p>
  <ul class="errors">
    <% @passenger.errors.each do | column, message | %>
      <li>
        <%= column.capitalize %> <%= message %>
      </li>
    <% end %>
  </ul>
<%end%>

<%=form_for @passenger do |f| %>

<%= f.label :name%>
<%= f.text_field :name%>


<%= f.label :phone_num%>
<%= f.text_field :phone_num %>

<%= f.submit%>
<%end%>
