<h2 class="my-class"><%=page_title%></h2>

<% if @driver.errors.any? %>
<p> We're sorry something about you inputs isn't right. Please correct the mentioned fields.</p>
  <ul class="errors">
    <% @driver.errors.each do | column, message | %>
      <li>
        <%= column.capitalize %> <%= message %>
      </li>
    <% end %>
  </ul>
<%end%>

<%=form_for @driver do |f| %>
<%= f.label :name%>
<%= f.text_field :name%>


<%= f.label :vin%>
<%= f.text_field :vin %>

<%= f.submit%>
<%end%>
